{
  "expo": {
    "name": "ER Debris App",
    "slug": "enr_debris_app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/Icons/app-icon.png",
    "scheme": "enrmobileapp",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/Icons/adaptive-icon.png",
        "monochromeImage": "./assets/Icons/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.enr.debrisapp"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/Icons/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "node_modules/@expo-google-fonts/open-sans/400Regular/OpenSans_400Regular.ttf",
            "node_modules/@expo-google-fonts/open-sans/600SemiBold/OpenSans_600SemiBold.ttf",
            "node_modules/@expo-google-fonts/open-sans/700Bold/OpenSans_700Bold.ttf"
          ]
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "This app requires access to your photos to allow you to upload, attach, or share images related to debris records and project documentation.."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
